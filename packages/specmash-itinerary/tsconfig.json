{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"allowArbitraryExtensions": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"jsx": "react",
		"lib": ["es6"],
		"noEmit": true,
		"strict": true,
		"target": "esnext",
		"types": ["react", "node"]
	},
	"exclude": ["node_modules", "babel.config.js", "metro.config.js"]
}
